<Application x:Class="PortfolioTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PortfolioTracker"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--<ImageBrush x:Key="MainBackground" 
                    ImageSource="Images\HorizontalBackground.png" 
                    Stretch="UniformToFill" />-->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Foreground" Value="Black" />
        </Style>

        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <SolidColorBrush x:Key="SemiTransparentBackground" 
                         Color="#0073CF"
                         Opacity=".6" />
        <local:ViewModelLocator x:Key="ViewModelLocator" />

    </Application.Resources>
</Application>
